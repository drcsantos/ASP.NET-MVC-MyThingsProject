@model MyThings.Web.Models.Category

@{
    ViewBag.Title = "Nova Categoria";
}
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group col-lg-12">
            @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-lg-12">
            @Html.LabelFor(m => m.Icon, htmlAttributes: new { @class = "control-label" })            
            <select id="Icon" name="Icon" class="selectpicker form-control">
                @foreach (var item in ViewBag.icons)
                {
                    <option value="@item.Value" data-icon="@item.Value">@item.Text</option>
                }
            </select>
            @Html.ValidationMessageFor(m => m.Icon, "", new { @class = "text-danger" })
        </div>

        <input type="submit" value="Salvar" class="btn btn-primary" />
        @Html.ActionLink("Voltar à Categorias", "Index", null, new { @class = "btn btn-default" })
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
